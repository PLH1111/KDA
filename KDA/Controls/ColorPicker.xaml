<UserControl x:Class="KDA.Controls.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KDA.Controls"
             mc:Ignorable="d" x:Name="ColorPickerRoot"
             d:DesignHeight="40" d:DesignWidth="40" BorderThickness="0" Background="Transparent">
    <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="3" Background="{Binding ElementName=ColorPickerRoot,Path=SelectedColor}" >
            
    </Border>
</UserControl>
